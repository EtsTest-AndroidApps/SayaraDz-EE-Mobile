<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<RelativeLayout
    android:id="@+id/layout_filters"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Spinner
        android:layout_marginTop="10dp"
        android:id="@+id/spinner_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_border"/>
    <Button
        android:id="@+id/btn_year"
        android:layout_margin="3dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/spinner_type"
        android:text="AnnÃ©e"
        android:background="@drawable/button_border"
        />

    <Button
        android:id="@+id/btn_price"
        android:layout_margin="3dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btn_year"
        android:text="Prix"
        android:background="@drawable/button_border"
        />
    <Spinner
        android:layout_marginTop="10dp"
        android:id="@+id/spinner_marque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btn_price"
        />
</RelativeLayout>

    <Button
        android:id="@+id/btn_more_filters"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_filters"
        android:layout_centerHorizontal="true"
        android:text="Plus de filtres"
        android:drawableBottom="@drawable/ic_expand_more_black_24dp"/>



</RelativeLayout>
