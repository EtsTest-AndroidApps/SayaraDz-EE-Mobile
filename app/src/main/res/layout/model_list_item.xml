<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modelItemContainer"
    android:layout_margin="2dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/rounded_corners"
        android:outlineAmbientShadowColor="@android:color/background_dark"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:padding="6dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/model_main_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="6dp"
            tools:src="@drawable/m_volkswagen"/>

        <TextView
            android:id="@+id/modelName"
            android:fontFamily="serif"
            android:layout_weight="1"
            android:text="Model Test"
            android:layout_marginLeft="18dp"
            android:textSize="@dimen/item_textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@drawable/ic_arrow_right_24dp"/>

    </LinearLayout>
</LinearLayout>