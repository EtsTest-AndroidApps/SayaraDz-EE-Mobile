<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/marqueItemContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:id="@+id/llContainer"
        android:background="@drawable/item_list_rounded_corners"
        android:gravity="center"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="@android:color/background_dark">

        <ImageView
            android:id="@+id/img_item_logo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            tools:src="@drawable/m_audi" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:text="MyAnnonceTitle"
            android:textColor="#000"
            android:textSize="15sp" />

    </LinearLayout>
     <androidx.appcompat.widget.AppCompatImageButton
         android:id="@+id/edit_button"
         android:layout_margin="10dp"
         android:padding="5dp"
         android:layout_alignEnd="@id/llContainer"
         android:background="@android:color/transparent"
         android:layout_width="wrap_content"
         android:src="@drawable/ic_edit_black_24dp"
         android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_button"
        android:layout_alignEnd="@id/llContainer"
        android:layout_margin="10dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:src="@drawable/ic_delete_black_24dp" />

</RelativeLayout>