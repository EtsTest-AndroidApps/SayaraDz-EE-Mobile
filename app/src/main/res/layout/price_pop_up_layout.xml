<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:id="@+id/tv_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix Min"
                android:textSize="17dp"


                />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_min"
                android:minWidth="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:hint=" (en million) "
                app:backgroundTint="@color/colorOrange"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/ll_min"
            >
            <TextView
                android:id="@+id/tv_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix Max"
                android:textSize="17dp"

                />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_max"
                android:minWidth="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:hint=" (en million) "
                app:backgroundTint="@color/colorOrange"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ll_max"
        app:layout_constraintTop_toBottomOf="@id/ll_max"
        app:layout_constraintRight_toRightOf="@id/ll_max">
        <Button
            android:id="@+id/btn_apply"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Appliquer"
            />
    </LinearLayout>
    </android.support.constraint.ConstraintLayout>



